<!-- DEPLOYMENT: start rviz with MoveIt! plugin. (Walkaround for Debian/Jessie rviz crash). -->
<launch>
	<!-- By default, we are not in debug mode -->
	<node ns="hmi" name="rviz" pkg="rviz" type="rviz" args="-d $(find sweetie_bot_deploy)/control/moveit_control.rviz">
		<remap from="robot_description" to="/sweetie_bot/robot_description"/>
		<env name="LC_NUMERIC" value="C" />
	</node>
</launch>
