<!-- DEPLOYMENT: control and visualize robot with joint space controllers -->
<launch>
	<arg name="run_real" default="false" doc="Run on real robot: activate hardware control, try to execute corresponding components on robot side."/>
	<arg name="robot" default="true" doc="Launch components which meant to be run on robot side."/>
	<arg name="host" default="true" doc="Launch components  which meant to be run on host side."/>

	<machine name="localhost" address="localhost" user="$(env USER)" />
	<machine name="sweetiebot" address="sweetie" user="pi" default="never"/>

	<!-- load parameters -->
	<group if="$(arg host)">
		<include ns="sweetie_bot" file="$(find sweetie_bot_deploy)/control/load_param.launch"/>
	</group>

	<!-- start robot -->
	<group ns="sweetie_bot">
		<include file="$(find sweetie_bot_deploy)/motion_core/sweetie_bot_core.launch">
			<arg name="run_real" value="$(arg run_real)" /> 
			<arg name="host" value="$(arg host)" /> 
			<arg name="robot" value="$(arg robot)" /> 
			<arg if="$(arg run_real)" name="modules" value="motion.lua controller_all.lua" />
			<arg unless="$(arg run_real)" name="modules" value="virtual_motion.lua controller_all.lua" />
			<arg name="overlays" value="control motion_core" /> 
			<arg name="interactive" value="false" /> 
		</include>
	</group>
	<!-- start robot -->
	
	<!-- run rviz -->
	<group ns="hmi" if="$(arg host)">
		<!-- manual joints control -->
		<node name="joint_state_ref" pkg="joint_state_publisher" type="joint_state_publisher">
			<param name="use_gui" value="true"/>
			<rosparam param="source_list">["/sweetie_bot/motion/controller/joint_state/out_joints_src_reset"]</rosparam>
			<param name="rate" value="5"/>
			<param name="num_rows" value="6"/>
			<remap from="robot_description" to="/sweetie_bot/robot_description"/>
			<remap from="joint_states" to="/sweetie_bot/motion/controller/joint_state/in_joints_ref"/>
		</node>
		<!-- vizualization -->
		<node name="rviz" pkg="rviz" type="rviz" args="-d $(find sweetie_bot_deploy)/control/joint_space_control.rviz">
			<remap from="robot_description" to="/sweetie_bot/robot_description"/>
			<env name="LC_NUMERIC" value="C" />
		</node>
		<node name="dynamics_visualizer" pkg="sweetie_bot_dynamics" type="visualizer" >
			<remap from="robot_model" to="/sweetie_bot/robot_model"/>
			<remap from="joint_state_accel" to="/sweetie_bot/motion/dynamics_inv/out_joints_accel_sorted"/>
			<remap from="wrenches" to="/sweetie_bot/motion/dynamics_inv/out_wrenches_fixed"/>
			<remap from="supports" to="/sweetie_bot/motion/agregator_ref/out_supports_sorted"/>
		</node>
		<node name="base_link_pose_marker" pkg="sweetie_bot_rviz_interactions" type="pose_marker" >
			<remap from="pose" to="/sweetie_bot/motion/controller/stance/in_base_ref"/>
		</node>
	</group>
</launch>
